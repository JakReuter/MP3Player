import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.List;

public class SongDatabase {

    private final String url = "jdbc:mysql://localhost:3306/mydatabase";
    private final String user = "root";
    private final String password = "password";

    public void insert(List<SongParser.Song> songs) throws SQLException {

        try (Connection conn = DriverManager.getConnection(url, user, password)) {

            String sql = "INSERT INTO songs (name, artist) VALUES (?, ?)";
            PreparedStatement stmt = conn.prepareStatement(sql);

            for (SongParser.Song song : songs) {
                stmt.setString(1, song.name);
                stmt.setString(2, song.artist);
                stmt.executeUpdate();
            }

        }

    }

}

